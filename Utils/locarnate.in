    locarnate::Error::debug('Wrong argument number');
  }

  my $options =  $_[0];
  my $results_path = $_[1];
  my $cons_rates = $_[2];

  *STDERR->print('Parse consensus informations...'."\r");

  my %cons_data = ();

  my $file_name = $results_path.'/cons/cons.out';
